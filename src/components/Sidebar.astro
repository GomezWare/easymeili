---
const { active = "indices" } = Astro.props;
---
<aside class="w-64 bg-white border-r flex flex-col h-screen">
  <div class="h-16 flex items-center justify-center border-b">
    <span class="text-xl font-bold text-indigo-600">EasyMeili</span>
  </div>
  <nav class="flex-1 px-4 py-6 space-y-2">
    <a href="#" class={`flex items-center px-3 py-2 rounded-md font-medium ${active === 'indices' ? 'bg-indigo-50 text-indigo-600' : 'text-gray-700 hover:bg-indigo-50 hover:text-indigo-600'}`}> 
      <svg class="w-5 h-5 mr-3 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V7"/><path stroke-linecap="round" stroke-linejoin="round" d="M16 3v4H8V3"/></svg>
      Índices
    </a>
    <a href="#" class={`flex items-center px-3 py-2 rounded-md font-medium ${active === 'estadisticas' ? 'bg-indigo-50 text-indigo-600' : 'text-gray-700 hover:bg-indigo-50 hover:text-indigo-600'}`}> 
      <svg class="w-5 h-5 mr-3 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3"/><circle cx="12" cy="12" r="10"/></svg>
      Estadísticas
    </a>
    <a href="#" class={`flex items-center px-3 py-2 rounded-md font-medium ${active === 'configuracion' ? 'bg-indigo-50 text-indigo-600' : 'text-gray-700 hover:bg-indigo-50 hover:text-indigo-600'}`}> 
      <svg class="w-5 h-5 mr-3 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
      Configuración
    </a>
  </nav>
</aside> 